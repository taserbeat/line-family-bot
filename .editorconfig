# https://github.com/nodejs/node/blob/master/.editorconfig

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = single

[vcbuild.bat]
end_of_line = crlf

[Makefile]
indent_size = 8
indent_style = tab

[*.{md,txt}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
